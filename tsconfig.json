{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/generated-unformatted.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // Output stuff
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist"
  }
}
